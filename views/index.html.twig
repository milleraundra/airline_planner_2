                    }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
        <form class="" action="/add/flight" method="post">
            <label for="departure_id">Departure City</label>
            <select class="" name="departure_id">
                {% for flight in flights %}
                <option value="{{ flight.getId }}">{{ flight.getName }}</option>
                {% endfor %}
            </select>
            <label for="arrival_id">Arrival City</label>
            <select class="" name="arrival_id">
                {% for flight in flights %}
                <option value="{{ flight.getId }}">{{ flight.getName }}</option>
                {% endfor %}
            </select>
            <label for="flight_number">Flight Number:</label>
            <input type="text" name="flight_number" value="">
            <label for="status">Status:</label>
            <select class="" name="status">
                <option value="on_time">On-Time</option>
                <option value="delayed">Delayed</option>
                <option value="early">Early</option>
                <option value="cancelled">Cancelled</option>
            </select>
            <label for="departure_date">Departure Date:</label>
            <input type="date" name="departure_date" value="">
            <label for="departure_time">Departure Time:</label>
            <input type="time" name="departure_time" value="">
            <button type="submit">Add Flight</button>
        </form>
    </body>
</html>
